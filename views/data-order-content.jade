table.list
    tbody
        tr
            th 訂單號
            th 用戶名
            th 手機號碼
            th 状态
            th 訂單日期
        tr(class='order-item' v-for='order in orders')
            td {{order._id}}
            td {{order.address.name}}
            td {{order.address.phone}}
            td {{order.state=='receipt'?'待接單 ':order.state=='delivery'?'待收貨 ':order.state=='sign'?'待簽收':order.state=='completion'?'完成訂單':order.state=='canceled'?'已取消':''}}
            td {{order.date | date}}
script.
    (function () {
        Vue.filter('date', function (value) {
            return new Date(parseInt(value)).format('yyyy年MM月dd日 hh時mm分ss秒')
        })
        var vue = new Vue({
            el: '#data-order-content',
            data: {
                orders: !{JSON.stringify(orders)}
            },
            methods: {}
        });
    }())